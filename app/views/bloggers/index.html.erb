<p id="notice"><%= notice %></p>

<h1>Bloggers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Articletitle</th>
      <th>Articlebody</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bloggers.each do |blogger| %>
      <tr>
        <td><%= blogger.Name %></td>
        <td><%= blogger.ArticleTitle %></td>
        <td><%= blogger.ArticleBody %></td>
        <td><%= link_to 'Show', blogger %></td>
        <td><%= link_to 'Edit', edit_blogger_path(blogger) %></td>
        <td><%= link_to 'Destroy', blogger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blogger', new_blogger_path %>
