<p id="notice"><%= notice %></p>

<h1 class="text-center">Bloggers</h1>

<table class="table table-light table-striped">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Articletitle</th>
      <th>Articlebody</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bloggers.each do |blogger| %>
      <tr>
        <td><%= blogger.Name %></td>
        <td><%= blogger.ArticleTitle %></td>
        <td><%= blogger.ArticleBody %></td>
        <td><%= link_to 'Show', blogger, class: 'link-dark fw-bolder text-decoration-none' %></td>
        <td><%= link_to 'Edit', edit_blogger_path(blogger), class: 'link-dark fw-bolder text-decoration-none' %></td>
        <td><%= link_to 'Destroy', blogger, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link-dark fw-bolder text-decoration-none' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="d-flex justify-content-center">
  <%= link_to "New Blogger", new_blogger_path, class: 'btn btn-secondary'%>
</div>


